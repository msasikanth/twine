upsertSyncGroup:
INSERT INTO feedGroup(id, name, createdAt, updatedAt, pinnedAt, isDeleted)
VALUES (:id, :name, :createdAt, :updatedAt, :pinnedAt, :isDeleted)
ON CONFLICT(id) DO
UPDATE SET
    name = excluded.name,
    pinnedAt = excluded.pinnedAt,
    updatedAt = excluded.updatedAt,
    isDeleted = excluded.isDeleted
WHERE excluded.updatedAt > feedGroup.updatedAt;
