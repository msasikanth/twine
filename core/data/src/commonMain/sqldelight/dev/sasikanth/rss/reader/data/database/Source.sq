  numberOfUnreadPosts,
  feedIds,
  feedHomepageLinks,
  feedIcons,
  updatedAt
FROM (
  SELECT
    'feed' AS type,
    f.id,
    f.name,
    f.icon,
    f.description,
    f.link,
    f.homepageLink,
    f.lastCleanUpAt,
    COUNT(CASE WHEN p.read = 0 AND p.isHidden = 0 THEN 1 ELSE NULL END) AS numberOfUnreadPosts,
    NULL AS feedIds,
    NULL AS feedHomepageLinks,
    NULL AS feedIcons,
    f.createdAt,
    f.pinnedAt,
    NULL AS updatedAt
  FROM feed f
  LEFT JOIN post p ON f.id = p.sourceId AND p.date > :postsAfter
  GROUP BY f.id

  UNION ALL

  SELECT
    'group' AS type,
    fg.id,
    fg.name,
    NULL AS icon,
    NULL AS description,
    NULL AS link,
    NULL AS homepageLink,
    NULL AS lastCleanUpAt,
    COUNT(CASE WHEN p.read = 0 AND p.isHidden = 0 THEN 1 ELSE NULL END) AS numberOfUnreadPosts,
    fgm.feedIds,
    fgm.feedHomepageLinks,
